# apps/web/.env.example

# =========================================
# このファイルを cp apps/web/.env.example apps/web/.env.local でコピーし、
# Firebase Webに本物の値を記入してください
# =========================================

# 本番環境のFirebase認証情報 (Webアプリ固有)
NEXT_PUBLIC_FIREBASE_WEB_API_KEY="YOUR_API_KEY"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="chokkoto-XXXX.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="chokkoto-XXXX.appspot.com"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="chokkoto-XXXX.appspot.com"

# バックエンド接続用
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/

# ユーザー登録情報画面モック有効化
NEXT_PUBLIC_USE_PROFILE_MOCK=1