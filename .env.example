# コマンド"cp .env.example .env.dev"で、コピー先にfirebaseの値を貼ってください(5箇所)

# 共通
NODE_ENV=development
TZ=Asia/Tokyo

# Web公開URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
QR_BASE_URL=http://localhost:3000/qr

# Web YOUR_VALUE を置き換えてください。
NEXT_PUBLIC_FIREBASE_WEB_API_KEY=YOUR_PROD_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false

# Firebase（dev）
    # Emulator 用（自由なダミー可、本番環境時はfalse）
#     NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# FIREBASE_PROJECT_ID=demo-myapp
# FIREBASE_WEB_API_KEY=fake-api-key
# FIREBASE_AUTH_DOMAIN=localhost
# FIREBASE_STORAGE_BUCKET=demo-myapp

# 署名URL発行用（開発は直入れ可。本番はSSM）
GCP_SA_JSON={"type":"service_account","project_id":"myapp-dev","private_key_id":"xxxxx","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"svc@myapp-dev.iam.gserviceaccount.com","client_id":"1234567890","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/svc%40myapp-dev.iam.gserviceaccount.com"}

# API / DB / Redis
PORT=3001
DATABASE_URL=postgresql://postgres:postgres@db:5432/app?schema=public
FIREBASE_PROJECT_ID= #  YOUR_VALUE を置き換えてください。
# Optional: GCP_SA_JSON={"type":"service_account", ...}
REDIS_URL=redis://redis:6379

# メール（dev）
SMTP_HOST=mailpit
SMTP_PORT=1025
MAIL_FROM=板橋サポーター運営 <no-reply@example.jp>

# 署名URL有効期限・ジョブ設定
SIGNED_URL_TTL_SECONDS=3600
DIGEST_EVERY_MINUTES=5
NOTIFY_ACTIVE_HOURS=00:00-24:00

# Windows/macOS でファイル変更検知が不安定な場合だけ下2行を有効化してください
# CHOKIDAR_USEPOLLING=true         # Tailwind/開発ツール向け
# WATCHPACK_POLLING=true           # Next.js(webpack/watchpack)向け
# CHOKIDAR_INTERVAL=1000           # 任意: CPUを抑えたい場合の間隔(ms)
# WATCHPACK_POLLING_INTERVAL=1000  # 任意: 同上（対応バージョンのみ）

# OpenAI
OPENAI_API_KEY=sk-XXXXXXX