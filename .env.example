# =========================================
# このファイルを cp .env.example .env.dev でコピーし、
# Firebase（Admin SDK）の3箇所に本物の値を記入してください
# =========================================

# 共通
NODE_ENV=development
TZ=Asia/Tokyo

# Web公開URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
QR_BASE_URL=http://localhost:3000/qr

# API
PORT=3001
API_BASE_URL=http://localhost:3001/api/api

# DB / Redis
DATABASE_URL=postgresql://postgres:postgres@db:5432/app?schema=public
REDIS_URL=redis://redis:6379

# Firebase（dev）
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n\n-----END PRIVATE KEY-----\n"

# 署名URL有効期限・ジョブ設定
SIGNED_URL_TTL_SECONDS=3600
DIGEST_EVERY_MINUTES=5
NOTIFY_ACTIVE_HOURS=00:00-24:00

# OpenAI
OPENAI_API_KEY=sk-XXXXXXX